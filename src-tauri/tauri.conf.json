{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "8-ball-js",
  "version": "0.0.0",
  "identifier": "dev.sprikers.8-ball-js",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "8 ball js",
        "width": 600,
        "height": 400,
        "alwaysOnTop": true,
        "center": true,
        "decorations": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "shadow": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
